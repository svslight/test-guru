<div class="row justify-content-center mt-3">
  <div  class="col col-md-9">

    <h2><%= t('.header', title: @test.title) %></h2>

    <p>
      <strong><%= t('.level', level: test_level(@test)) %></strong>
    </p>

    <h2><%= t('.questions') %></h2>

    <p>
      <%= link_to t('.new_question'), new_admin_test_question_path(@test.id), class: 'btn btn-sm btn-outline-primary' %>
    </p>

    <table class="table table-hover table-bordered table-sm">
      <thead class="thead-light">
        <tr>
          <th><%= t('.title') %></th>
          <th colspan="3"><%= t('.actions') %></th>
        </tr>
      </thead>

      <%= render partial: 'admin/questions/question', collection: @test.questions %>
    </table>

    <p>
      <%= link_to t('.edit'), edit_admin_test_path(@test), class: 'btn btn-sm btn-primary' %> 
      <%= link_to t('.back'), admin_tests_path, class: 'btn btn-sm btn-primary' %>
    </p>
  </div>
</div>
