<div class="row justify-content-center mt-3">
  <div class="col col-md-10">

    <h2><%= t('.header') %></h2>

    <p>
      <%= link_to t('.new_rule'), new_admin_badge_rule_path, class: 'btn btn-sm btn-outline-primary' %>
    </p>

    <%= render 'shared/errors', resource: @badge_rule %>

    <table class="table table-hover table-bordered table-sm">
      <thead class="thead-light">
        <tr>
          <th><%= t('.rule') %></th>
          <th><%= t('.description') %></th>
          <th colspan="2"><%= t('.actions') %></th>
        </tr>
      </thead>

      <%= render @badge_rules %>
    </table>
  </div>
</div>
